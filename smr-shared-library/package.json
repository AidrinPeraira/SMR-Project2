{
  "name": "@smr/shared",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "dev": "tsup src/index.ts --dts --watch --format esm,cjs --out-dir dist",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^3.23.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.4.0"
  }
}
